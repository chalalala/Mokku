{
  "manifest_version": 2,
  "name": "Moku: Mock API calls seamlessly",
  "description": "Adds the API mocker Moku to Chrome Developer Tools for seamless integration & testing.",
  "version": "1.0",
  "devtools_page": "devtool.html",
  "icons": {
    "16": "moku-16.png",
    "48": "moku-48.png",
    "128": "moku-128.png",
    "512": "moku-512.png"
  },
  "browser_action": {
    "default_icon": "moku-16.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["js/inject.js"],
  "permissions": ["storage", "<all_urls>"]
}
